                                <Badge variant="outline"
                                       className="text-xs font-normal bg-blue-50 text-blue-700 border-blue-200">
                                    {solution.category}
                                </Badge>
                                {isMobile && (
                                    <Badge variant="secondary"
                                           className="text-xs bg-green-100 text-green-800 hover:bg-green-200">
